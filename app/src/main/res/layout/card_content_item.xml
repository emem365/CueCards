<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.CueCardsRecyclerViewAdapter.CueCardViewHolder.CardContentViewHolder">

    <data>

        <variable
            name="index"
            type="String" />

        <variable
            name="cardContent"
            type="com.madhurmaurya.cuecards.data.models.CardContent" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:text="@{index}"
            android:textAlignment="center"
            android:textAppearance="?attr/textAppearanceBody1"
            tools:text="20." />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato"
            android:textAppearance="?attr/textAppearanceBody1"
            android:text="@{cardContent.content}"
            android:textColor="#121212"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla id orci a elit luctus dapibus ac at nunc. Praesent convallis nisi id mi lobortis faucibus." />
    </LinearLayout>
</layout>